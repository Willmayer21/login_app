<div class="text-center">
  <h1 class="display-4 mb-4">Welcome to Login App</h1>
  
  <% if user_signed_in? %>
    <div class="alert alert-success">
      <h2>Hello, <%= current_user.email %>!</h2>
      <p>You are successfully signed in.</p>
    </div>
  <% else %>
    <div class="card mx-auto" style="max-width: 400px;">
      <div class="card-body">
        <h5 class="card-title">Get Started</h5>
        <p class="card-text">Please sign in or create an account to continue.</p>
        <div class="d-grid gap-2">
          <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary mb-2' %>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-outline-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
